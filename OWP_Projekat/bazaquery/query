CREATE TABLE projekcije (
            id INTEGER PRIMARY KEY,
            film int NOT NULL,
            tip int NOT NULL,
            sala int NOT NULL,
            datumVreme datetime NOT NULL,
            cenaKarte int NOT NULL,
            admin VARCHAR(30) NOT NULL,
            aktivan BOOLEAN NOT NULL
);

INSERT INTO projekcije(film,tip,sala,datumVreme,cenaKarte,admin,aktivan) VALUES(1, 1, 1, '2020-02-15 20:00:00', 300, 'zoki', 1);
